<?xml version="1.0" encoding="utf-8" ?>
 <ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Dictionary1">
    <!-- Define Theme for Reputation -->
    <Style x:Key="ReputationStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#1c1c1c"/>
        <Setter Property="TextColor" Value="Silver"/>
    </Style>

    <!-- Define Theme for Lover -->
    <Style x:Key="LoverStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#f7c7d7"/>
        <Setter Property="TextColor" Value="#fff"/>
    </Style>

    <!-- Define Theme for Folklore -->
    <Style x:Key="FolkloreStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#F5F5DC"/>
        <Setter Property="TextColor" Value="#000000"/>
    </Style>

    <!-- Define Theme for 1989 -->
    <Style x:Key="NineteenEightyNineStyle" TargetType="Button">
        <Setter Property="BackgroundColor" Value="#87CEEB"/>
        <Setter Property="TextColor" Value="#FFFFFF"/>
    </Style>
</ResourceDictionary>
